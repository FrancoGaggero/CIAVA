---
/**
 * Layout principal de CIAVA
 * Incluye meta tags, fonts y estilos globales
 */
import '../styles/global.css';
import Header from '../components/Header.astro';

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = 'CIAVA - Producciones Fotográficas de Moda',
	description = 'Estudio especializado en producciones fotográficas de moda con estética editorial y profesional. Campañas, lookbooks y contenido para marcas.'
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO -->
		<title>{title}</title>
		<meta name="description" content={description} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link 
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" 
			rel="stylesheet" 
		/>
	</head>
	<body class="antialiased">
		<Header />
		<slot />
	</body>
</html>

<style is:global>
	html {
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		padding: 0;
		width: 100%;
		min-height: 100vh;
		overflow-x: hidden;
	}

	/* Scroll suave para navegación */
	@media (prefers-reduced-motion: no-preference) {
		html {
			scroll-behavior: smooth;
		}
	}
</style>
